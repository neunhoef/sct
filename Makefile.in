CC=cc

COMPILEOPTIONS="-O3 -fomit-frame-pointer"
#COMPILEOPTIONS="-O3 -g -fomit-frame-pointer"
#COMPILEOPTIONS="-O0 -g -Wall"
# Some experiments:
#COMPILEOPTIONS="-march=i686 -mcpu=pentium4 -O3 -fomit-frame-pointer"
#COMPILEOPTIONS="-march=i686 -mcpu=pentium4 -O3 -fomit-frame-pointer -falign-loops=5 -finline-limit=6000"

GAPINCL=-I$(GAPPATH)/src -I$(GAPPATH)/bin/@GAPARCH@

.PHONY: bindir clean doc test

default: bindir bin/@GAPARCH@/sct.so

# this target creates a bin-directory
bindir:
	if test ! -d bin;  then mkdir bin;  fi
	if test ! -d bin/@GAPARCH@;  then mkdir -p bin/@GAPARCH@;  fi

bin/@GAPARCH@/sct.so: src/sct.c
	cp $(GAPPATH)/bin/@GAPARCH@/config.h bin/@GAPARCH@
	$(GAPPATH)/bin/@GAPARCH@/gac -p ${COMPILEOPTIONS} -d -o bin/@GAPARCH@/sct.so src/sct.c

# make a statically linked GAP including the sct module
static:
	(cd $(GAPPATH)/bin/@GAPARCH@; \
	./gac -o gap-static -p "-DSCTSTATIC" -p ${COMPILEOPTIONS} -P "-static" \
	../../pkg/sct/src/sct.c)

doc: doc/manual.six

doc/manual.six: doc/analyse.xml doc/install.xml \
		doc/examples.xml doc/intro.xml VERSION
	($(GAPPATH)/bin/gap.sh makedoc.g)

clean:
	(cd doc ; ./clean)
	rm -rf bin/@GAPARCH@ Makefile

archive: doc
	(cd .. ; tar czvf sct-`cat sct/VERSION`.tar.gz --exclude ".svn" --exclude bin --exclude test sct)

WEBPOS=/scratch/neunhoef/mywebpage.pub/Computer/Software/Gap/SCT

towww: archive
	echo '<?xml version="1.0" encoding="ISO-8859-1"?>' >${WEBPOS}.version
	echo '<mixer>' >>${WEBPOS}.version
	cat VERSION >>${WEBPOS}.version
	echo '</mixer>' >>${WEBPOS}.version
	cp PackageInfo.g ${WEBPOS}
	cp README ${WEBPOS}/README.sct
	cp doc/manual.pdf ${WEBPOS}/sct.pdf
	cp ../sct-`cat VERSION`.tar.gz ${WEBPOS}
	@echo
	@echo Now please adjust the archive link in 
	@echo "    " ${WEBPOS}.mixer !

